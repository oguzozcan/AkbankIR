<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tomato</item>
        <item name="colorPrimaryDark">@color/title_background</item>
        <item name="colorAccent">@color/colorAccent</item>


        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorControlNormal">@color/greyish_brown</item>

        <item name="android:windowTitleBackgroundStyle">@color/title_background</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <!--TODO -->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="contentInsetStart">0dp</item>-->
        <!--<item name="windowActionModeOverlay">true</item>-->

        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="contentInsetStart">0dp</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="MyMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item></style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">    <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/warm_grey</item>
    </style>

</resources>
